<!DOCTYPE html>
<html>
<head>
    <title>{{ title }}</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body style="background:#0d0d1a; color:#e0e0e0; font-family:sans-serif; padding:20px;">
    <h1>{{ title }}</h1>
    <canvas id="bondChart" width="800" height="400"></canvas>
    <script>
        const ctx = document.getElementById('bondChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: {{ pairs | map(attribute=0) | list }},
                datasets: [{
                    label: 'Bond Strength',
                    data: {{ pairs | map(attribute=1) | list }},
                    backgroundColor: 'rgba(0, 212, 255, 0.6)'
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
</body>
</html>
